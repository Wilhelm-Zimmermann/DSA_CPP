{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "C/C++: g++ build and debug",
        "type": "cppdbg",
        "request": "launch",
        "program": "${fileDirname}/${fileBasenameNoExtension}",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "miDebuggerPath": "gdb", // Use full path (e.g., "C:/MinGW/bin/gdb.exe") if needed
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "preLaunchTask": "C/C++: g++ build active file" // Must match the "label" in tasks.json
      }
    ]
  }